{
        "compilerOptions": {
		"resolveJsonModule": true,
                "target": "ES2020",
                "module": "esnext",
                "sourceMap": true,
                "rootDir": "./src",
                "strict": true,
                "moduleResolution": "node",
                "esModuleInterop": true,
                "skipLibCheck": true,
                "forceConsistentCasingInFileNames": true,
                "outDir": "./dist",
                "allowJs": true
        },
        "include": ["src/**/*"],
}
